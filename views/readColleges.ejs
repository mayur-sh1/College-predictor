        <p class="text-gray-600">Pilani, Rajasthan</p>
      </div>

      <!-- College Card 4 -->
      <div class="bg-white shadow rounded-lg p-4">
        <img src="https://images.unsplash.com/photo-1509228627152-72ae9ae6848e?w=600&q=80" alt="IIIT Hyderabad" class="w-full h-48 object-cover rounded mb-4" />
